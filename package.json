    "scripts": {
        "install": "grunt clean && grunt updateVersions && grunt curl-dir && grunt copy && grunt sass",
        "postinstall": "grunt genLocaleJSFiles",
        "locale-gen": "locale/update-locale.sh",
        "locale-download": "grunt updateFromPOeditor && grunt genLocaleJSFiles",
        "package": "grunt generateSignatures &&  grunt genPluginsSignatures && grunt compress",
        "demosite": "scripts/demosite.sh",
        "changelog-gen": "scripts/gen-changelogs.sh",
        "orm-gen": "src/vendor/propel/propel/bin/propel --config-dir=propel model:build && cd propel && python3 relocatePluginfiles.py && cd ../src/ && composer dump-autoload && cd .. && rm -rf generated-conf",
        "loaddatabase-file": "mkdir -p generated-conf && mv propel/*.xml generated-conf/ && cp generated-conf/main.schema.xml propel/ && mv propel/propel.php propel/propelPlugin.php && mv propel/propel_loadDatabase.php propel/propel.php && src/vendor/propel/propel/bin/propel --config-dir=propel model:build && cd propel && cd ../src/ && composer dump-autoload && cd .. && cp -f generated-conf/*.xml propel/ && mv propel/propel.php propel/propel_loadDatabase.php && mv propel/propelPlugin.php propel/propel.php && cp generated-conf/loadDatabase.php src/EcclesiaCRM/ && rm -rf generated-conf",
        "clean-datatables-lang-files": "locale/clean-datatables-lang.sh",
        "graph-viz": "src/vendor/propel/propel/bin/propel --config-dir=propel graphviz:generate",
        "datadictionary": "src/vendor/propel/propel/bin/propel --config-dir=propel datadictionary:generate",
        "composer-install": "cd src/ && composer install",
        "composer-update": " cd src/ && composer update && composer dump-autoload && cd ../tests/ && composer update",
        "tests-install": "scripts/tests-install.sh",
        "test": "scripts/tests-run.sh"
    }
